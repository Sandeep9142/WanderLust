<% layout("./layouts/boilerplate.ejs") %>
<body>
    <h3>All Listing</h3>
    <ul>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let list of allList) {%>
      <a href="/listings/<%= list._id %>" id="upper-card">
      <div class="card col-rows" >
          <img src="<%= list.image %>" class="card-img-top" alt="listing-image" style="height: 20rem;">
          <div class="card-img-overlay">
            
          </div>
          <div class="card-body">
            <p class="card-text"><b><%= list.title %></b></p>
         
            <p class="card-text">&#8377;<%= list.price.toLocaleString("en-IN") %>/night</p>
          </div>
        </div> 
      </a>     
      <% } %>
   </div>
    
    </ul>

</body>
